<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/shift_work_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:shadowColor="?attr/colorAccent"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="4"
        android:textAlignment="center"
        android:textColor="?attr/colorSurface"
        android:textSize="70sp" />

    <LinearLayout
        android:id="@+id/events_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="220dp"
        android:orientation="vertical"
        android:padding="@dimen/card_padding">

        <TextView
            android:id="@+id/no_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_event"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/text_size_description" />

        <TextView
            android:id="@+id/holiday_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorTextHoliday"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_description" />

        <TextView
            android:id="@+id/device_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_size_description" />

        <TextView
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_description" />

        <include
            android:id="@+id/buttons_bar"
            layout="@layout/settings_buttons_bar" />

    </LinearLayout>

</FrameLayout>
