<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/owghat_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:orientation="vertical"
    android:padding="@dimen/padding_item">

    <!-- Only shown in Persian so no need for i18n for now -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/padding_item"
        android:text="اگر مایل به دیدن اوقات شرعی هستید مکان را در تنظیمات مشخص کنید." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/discard"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_item"
            android:layout_weight="1"
            android:text="در نظر نگرفتن"
            app:cornerRadius="@dimen/button_radius" />

        <Button
            android:id="@+id/activate"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_item"
            android:layout_weight="1"
            android:text="رفتن به تنظیمات"
            app:cornerRadius="@dimen/button_radius" />

    </LinearLayout>

</LinearLayout>

